<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather App</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand ml-2" href="#">Show My Weather</a>
        <button
          class="navbar-toggler mr-2"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse ml-2" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Dropdown
              </a>
              <ul class="dropdown-menu mr-3">
                <li><a class="dropdown-item" href="#">Action</a></li>
                <li><a class="dropdown-item" href="#">Another action</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="#">Something else here</a>
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <button
                class="btn btn-outline-success mr-3"
                type="submit"
                id="SaveWeather"
              >
                Save Weather
              </button>
            </li>
          </ul>

          <form class="d-flex" role="search">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
              id="city"
            />
            <button
              class="btn btn-outline-success mr-3"
              type="submit"
              id="Submit"
            >
              Search
            </button>
          </form>
        </div>
      </div>
    </nav>

    <main class="mt-5 ml-5 mr-5">
      <h1>Weather Conditions Of <span id="cityName"></span></h1>
      <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <div class="col mt-3">
          <div class="card mb-2 rounded-3 shadow-sm w-100">
            <div class="card-header py-3">
              <h4 class="my-0 fw-normal">Sunrise And Sunset</h4>
            </div>
            <div class="card-body">
              <p class="card-title pricing-card-title">
                Sunrise : <span id="sunriseHtml"></span>
                <br />
                Sunset : <span id="SunsetHtml"></span>
              </p>
            </div>
          </div>
        </div>

        <div class="col mt-3">
          <div class="card mb-4 rounded-3 shadow-sm w-100">
            <div class="card-header py-3">
              <h4 class="my-0 fw-normal">Cloude:Point cloud transformer</h4>
            </div>
            <div class="card-body">
              <p class="card-title pricing-card-title">
                cloud-pct : <span id="cloud_pct"></span>
                <br />
                feels-like : <span id="feels_like"></span>
              </p>
            </div>
          </div>
        </div>

        <div class="col mt-3">
          <div class="card mb-4 rounded-3 shadow-sm w-100">
            <div class="card-header py-3">
              <h4 class="my-0 fw-normal">Humidity</h4>
            </div>
            <div class="card-body">
              <p class="card-title pricing-card-title">
                Humidity : <span id="humidity"></span>
                <br />
                Wind Speed : <span id="wind_speed"></span>
                <br />
                Wind Degrees : <span id="wind_degrees"></span>
              </p>
            </div>
          </div>
        </div>

        <div class="col">
          <div class="card mb-4 rounded-3 shadow-sm border-primary w-100">
            <div class="card-header py-3 text-bg-primary border-primary">
              <h4 class="my-0 fw-normal">Temperature</h4>
            </div>
            <div class="card-body">
              <p class="card-title pricing-card-title">
                Temperature : <span id="temp"></span>
                <br />
                Max-Temperature : <span id="max_temp"></span>
                <br />
                Min-Temperature : <span id="min_temp"></span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <h2 class="display-6 text-center mb-4">
        Weather Report Saved On Specified Date
      </h2>

      <div class="table-responsive">
        <table class="table text-center">
          <thead>
            <tr>
              <th style="width: 10%">Location</th>
              <th style="width: 10%">Sunrise</th>
              <th style="width: 10%">Sunset</th>
              <th style="width: 10%">Teamperature</th>
              <th style="width: 10%">Humidity</th>
              <th style="width: 10%">Wind Speed</th>
              <th style="width: 10%">Wind Dgree</th>
              <th style="width: 10%">Feels Like</th>
              <th style="width: 10%">Cloud PCT</th>
              <th style="width: 10%">Date</th>
            </tr>

            <% weatherusersaved.forEach(function(report){ %>
            <tr>
              <th><%= report.location %></th>
              <th><%= report.Sunrise %></th>
              <th><%= report.Sunset %></th>
              <th><%= report.Teamperature %></th>
              <th><%= report.humidity %></th>
              <th><%= report.WindSpeed %></th>
              <th><%= report.WindDegrees %></th>
              <th><%= report.feelslike %></th>
              <th><%= report.cloudPct %></th>
              <th><%= report.Datetime %></th>
            </tr>
            <% }) %>
          </thead>
        </table>
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <script type="module" src="../js/script.js"></script>
  </body>
</html>
